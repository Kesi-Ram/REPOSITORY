class Product{
    //attributes
    protected String name;
    protected double price;
    protected int quantity;

    //constructor
    public Product(double price, int quantity){
        this.price = price;
        this.quantity = quantity;
    }
    //methods
    public void displayProductInfo(){
        System.out.print(" Product Name: " + name );
        System.out.print(" Quantity: " + quantity );
        System.out.printf(" Price: $%.2f%n", price);
    }

    public void totalPrice(){
        System.out.printf(" Total Price: $%.2f%n", price * quantity);
    }
}

class Electronics extends Product{
    //attributes
    private int warranty;

    //constructor
    public Electronics(String name, double price, int quantity, int warranty){
        super(price, quantity);
        this.name = name;
        this.warranty = warranty;
    }
@Override
    public void totalPrice(){
        super.totalPrice();
    }
    public void warranty(){

        System.out.println(" warranty: " + warranty + "months");
        if(quantity > 2){
            warranty += 6;
            System.out.println(" Warranty extended by 6 months. New Warranty Period: " + warranty + "months");

        }

    }
}

class Clothing extends Product{
    //attributes
    private char size;

    //constructor
    public Clothing(String name, double price, int quantity, char size){
        super(price, quantity);
        this.name = name;
        this.size = size;
    }
@Override
    public void totalPrice(){
        super.totalPrice();
    }

    public void TrySize(){
        System.out.println(" Trying on T-Shirt in size " + size);
    }
}

class Book extends Product{
    //attributes
    private String author;

    //constructor
    public Book(String name, double price, int quantity, String author){
        super(price, quantity);
        this.name = name;
        this.author = author;
    }
@Override
    public void totalPrice(){
        super.totalPrice();
    }

    public void Reading(){
        System.out.println(" Reading a preview of " + name + " by" + author);
    }
}


public class ECommerce {
    public static void main(String[] args) {
        //create product objects
        //electronics
        Electronics p1 = new Electronics("Laptop", 1200, 10, 24);
        p1.displayProductInfo();
        p1.totalPrice();
        p1.warranty();
        System.out.println("------------------------------");
        //CLothing
        Clothing p2 = new Clothing("T-Shirt", 25, 50, 'L');
        p2.displayProductInfo();
        p2.totalPrice();
        p2.TrySize();
        //Books
        System.out.println("------------------------------");
        Book p3 = new Book("1984", 15, 100, " George Orwell");
        p3.displayProductInfo();
        p3.totalPrice();
        p3.Reading();
        System.out.println("------------------------------");
    }
}
